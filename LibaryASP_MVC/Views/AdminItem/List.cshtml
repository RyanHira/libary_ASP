@model List<LibaryASP_MVC.Models.Domain.Item>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>All Items - Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<td>Id</td>
					<td>Title</td>
					<td>Authors</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Title</td>
						<td>
							<div class="d-flex">
								@foreach (var author in item.Authors)
								{
									<span class="badge bg-secondary me-1">@author.Name</span>
								}
							</div>
						</td>
						<td>
							<a asp-area=""
					   asp-controller="AdminItem"
					   asp-action="Edit"
					   asp-route-id="@item.Id">
								Edit
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Nothing to show</p>
	}

	
	
</div>