@model LibaryASP_MVC.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center gy-5 py-5">
        <div class=" col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Libary - De Bieb Almere 
            </h1>
            <p class="lead">
                Libary vindt je alle boeken en meer!
            </p>
        </div>


        <div class=" col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/1290141/pexels-photo-1290141.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
            alt="Libary - Bieb" 
            class="d-block mx-lg-auto img-fluid" width="500" />
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if (Model != null && Model.Authors.Any())
            {
                foreach (var author in Model.Authors)
                {
                    <span class="badge bg-dark me-1">
                        @author.Name
                    </span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Items.Any())
            {
                foreach(var item in Model.Items)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@item.FeatureImageUrl" alt="@item.Title" class="mb-2 d-block img-fluid" width="400"/>

                        <h2 class="mb-4">@item.Title</h2>
                        @foreach (var author in item.Authors)
                        {
                            <span class="badge bg-secondary me-1">@author.Name</span>
                        }
                        <p class="mb-4 ">
                            Genre: @item.Genre
                            <br />
                            Release Date: @item.ReleaseDate.ToShortDateString()
                        </p>

                        <p class="mb-4">@item.Shortdescription</p>

                        <a class="btn btn-dark" 
                        asp-area=""
                        asp-controller="Items"
                        asp-action="Index"
                        asp-route-urlHandle="@item.UrlHandle"
                        >Reserveer</a>
                    </div>
                }
            }
        </div>
    </div>
</div>
